{# Top Players Twig template #}

<table class="table table-hover table-condensed">
    <thead>
        <tr>
            <th></th>
            <th>Position</th>
            <th>Player</th>
            <th>Score</th>
        </tr>
    </thead>
    <tbody>
    {% for player in players %}
        <tr>
            <td><img src="{{ player['dp'] }}" title="{{ player['username'] }}'s Profile Picture" width="36" /></td>
            <td>{{ player['rank'] }}</td>
            <td><a href="{{ path('ctf_public_profile', { id: player['id'] }) }}" target="_blank">{{ player['username'] }}</a></td>
            <td>{{ player['score'] }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{# List of stages #}
<ul class="nav nav-list well">
    {% set ctr = 1 %}
    {% for item in list %}
        <li>
            <a href="{{ path('ctf_admin_stage_form', { id: item.getId() }) }}" class="list-item">
                <span class="badge badge-inverse">{{ ctr }}</span>
                {{ item.getName() }}
                <span class="pull-right">
                    <button class="btn-link" data-url="{{ path('ctf_admin_stage_remove', { id: item.getId() }) }}">
                        <i class="icon-white icon-remove"></i>
                    </button>
                </span>
            </a>
        </li>
    {% set ctr = ctr + 1 %}
    {% endfor %}
    <li class="divider"></li>
    <li><a href="#" id="add-more-stages">Add More &raquo;</a></li>
</ul>

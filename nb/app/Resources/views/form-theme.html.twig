{% block field_errors %}
{% for error in errors %}
<div class="alert alert-error clearfix">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    {{ error.messageTemplate|trans(error.messageParameters, 'validators') }}
</div>
{% endfor %}
{% endblock %}


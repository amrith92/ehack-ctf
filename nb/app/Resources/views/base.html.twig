{# This defines the generic template for the website #}
<!DOCTYPE html>
<html lang="en-GB" xmlns:fb="http://ogp.me/ns/fb#">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="" />
    <meta name="author" content="thegeekmachine, vstartu" />
    <title>{% block title %}{% endblock %}</title>
    <link rel="canonical" href="{{ app.request.getScheme() }}://{{ app.request.getHttpHost() }}" />
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    {% stylesheets
        'bundles/ctfcommon/css/normalize.css'
        'bundles/ctfcommon/css/eggplant/jquery-ui-1.10.3.custom.min.css'
        filter='cssrewrite, yui_css'
        output='base.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.min.css" rel="stylesheet">
    <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.no-icons.min.css" rel="stylesheet">
    {% if light is not defined %}
    <link rel="stylesheet" href="{{ asset('bundles/ctfcommon/css/darkstrap.css') }}" type="text/css" media="screen" />
    {% endif %}
    {% stylesheets
        'bundles/ctfcommon/css/toggle-switch.css'
        'bundles/ctfcommon/css/social-buttons.css'
        filter='cssrewrite, yui_css'
        output='base-extras.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% block extracss %}{% endblock %}
    <!--[if lt IE 9]>
        <script src="{{ asset('bundles/ctfcommon/js/html5shiv.js') }}"></script>
        <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome-ie7.min.css" rel="stylesheet">
    <![endif]-->
    {% block extrajs %}{% endblock %}
</head>
<body {% block extrabodyattrib %}{% endblock %}>
    {% block menu %}
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="brand" href="#">ehack CTF</a>
                <div class="nav-collapse collapse">
                    <p class="navbar-text pull-right">
                        {% if app.user.username is defined and admin_menuitems is not defined %}
                        Logged in as <a href="{{ path('ctf_user_edit_profile') }}" class="navbar-link">{{ app.user.username }}</a> | <a href="{{ path('logout') }}" class="navbar-link">Logout</a>
                        {% elseif app.user.username is defined %}
                        Logged in as <a href="#" class="navbar-link">{{ app.user.username }}</a> | <a href="{{ path('admin_logout') }}" class="navbar-link">Logout</a>
                        {% else %}
                        <a href="javascript:openLoginModal();" class="navbar-link">Login</a>
                        {% endif %}
                    </p>
                    {% if admin_menuitems is not defined %}
                    {% include "::menuitems.html.twig" with { 'active': active } only %}
                    {% else %}
                    {% include "::menuitems.html.twig" with { 'active': active, 'admin_menuitems': admin_menuitems } only %}
                    {% endif %}
                </div><!--/.nav-collapse -->
            </div>
        </div>
    </div>
    <div class="clearfix">
        &nbsp;
    </div>
    {% endblock %}
    {% block content %}{% endblock %}

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>
{% javascripts
    '@CTFCommonBundle/Resources/public/js/jquery-ui-1.10.3.custom.min.js'
    '@CTFCommonBundle/Resources/public/js/cookiemanager.js'
    '@CTFCommonBundle/Resources/public/js/modernizr.js'
    '@CTFCommonBundle/Resources/public/js/underscore.min.js'
    '@CTFCommonBundle/Resources/public/js/jquery.zoomooz.min.js'
    filter='yui_js'
    output='base.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
    <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>
    <!--[if lt IE 8]>
{% javascripts
    '@CTFCommonBundle/Resources/public/js/icon-font-ie7.js'
    '@CTFCommonBundle/Resources/public/js/lte-ie7-24.js'
    filter='yui_js'
    output='base-lt-ie8.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
    <![endif]-->
    {% block extrajsend %}{% endblock %}
</body>
</html>
